<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surat Laporan Desa Bangkal"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="NIK:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvNik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Alamat:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Kewarganegaraan:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvCitizenship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Agama:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvReligion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nama Ayah:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvFatherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nama Ibu:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvMotherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pandu Adyatama"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pengajuan Surat:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tvLeterType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surat Keterangan Usaha"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/img" />

</LinearLayout>