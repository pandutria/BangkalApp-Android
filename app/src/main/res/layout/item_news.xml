<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desa Bangkal Gelar Festival Buah Tahunan ke-5"
            android:maxLines="2"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desa Bangkal sukses menyelenggarakan Festival Buah Tahunan ke-5 yang dihadiri ratusan pengunjung dari berbagai daerah. Acara yang berlangsung selama dua hari ini menampilkan berbagai produk buah unggulan desa seperti durian, manggis, dan salak. Festival ini sekaligus menjadi ajang promosi potensi agrowisata Desa Bangkal yang semakin berkembang."
            android:maxLines="4"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/lightGray"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/example"
            android:scaleType="centerCrop"/>


    </androidx.cardview.widget.CardView>



</LinearLayout>